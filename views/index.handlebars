<div id="wrapper">
    <div>
        <h1>Article Scraper</h1>
        <button id="scrape-btn" class="btn btn-primary">Scrape Site</button>
    </div>
    <div class="jumbotron">
        <img src="/assets/img/newspapers.jpg">
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Articles</h4>
                </div>
                <div class="card-body">
                    <ul id="tableList" class="list-group">
                        {{#each articles}}
                        <li class='list-group-item mt-4'>
                            <h3><a href='{{link}}'>{{title}}</a></h3>
                            <p>{{summary}}</p>
                            <button class="comment-btn" data-id="{{_id}}">Add Comments</button>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body comment-section">
                </div>
                <hr>
                <div>
                    <textarea class="comment-text"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="save-btn btn btn-primary">Save Comment</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>