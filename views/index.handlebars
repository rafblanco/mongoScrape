<div id="wrapper">
    <h1>Article Scraper</h1>
    <div class="jumbotron">
        <img src="/assets/img/newspaper.jpg">
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Articles</h4>
                </div>
                <div class="card-body">
                    <ul id="tableList" class="list-group">
                        {{#each article}}
                        <li class='list-group-item mt-4'>
                            <h3><a href='{{link}}'>{{title}}</a></h3>
                            <p>{{summary}}</p>
                            <button class="comment-btn" data-id="{{_id}}">Add Comments</button>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {{#each article}}
    <div class="modal" tabindex="-1" role="dialog" data-modal="{{_id}}">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Comments for {{_id}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body comment-section">
                    {{#each comment}}
                        <div data-comment={{_id}}>{{comment}} <button class="delete-comment">&times;</button></div>
                    {{/each}}
                </div>
                <div>
                    <textarea class='comment-text' data-id="{{_id}}"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="save-btn" class="btn btn-primary">Save Comments</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>